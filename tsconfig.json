{
	"compilerOptions": {
		"target": "ES2015",
		"module": "ES2022",
		"strict": true,
		"moduleResolution": "Node",
		"declaration": true,
		"declarationDir": "dist/types",
		"jsxFactory": "React.createElement",
		"jsx": "react",
		"jsxFragmentFactory": "React.Fragment",
		"allowSyntheticDefaultImports": true,
		"baseUrl": "src",
		"paths": {
			"@": ["src"]
		}
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"]
}
